<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:screenOrientation="portrait">

        <TextView
            android:id="@+id/tv_singuppage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP PAGE"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tv_i"
            android:layout_below="@+id/tv_singuppage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_account_circle_black_24dp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_below="@+id/tv_i"
            android:id="@+id/et_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First name"
            android:inputType="text"
            android:paddingBottom="20dp" />

        <EditText
            android:id="@+id/et_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_fname"
            android:hint="Last name"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_mobail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_lname"
            android:hint="Mobail No"
            android:inputType="text"
            android:maxLength="10"/>

        <EditText
            android:id="@+id/et_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mobail"
            android:hint="Address" />

        <EditText
            android:id="@+id/et_emil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_adress"
            android:hint="Mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_emil"
            android:hint="Password"
            android:inputType="textPassword"
            android:ems="4"/>

        <EditText
            android:id="@+id/et_conpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password"
            android:hint="confirm Password"
            android:inputType="textPassword"
            android:ems="4"/>

        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="male" />

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="154dp"
                android:checked="true"
                android:text="female" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rg_gender"
            android:layout_centerHorizontal="true"
            android:text="Sign up" />

        <TextView
            android:id="@+id/tv_singin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/btn_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="Already register.? Sign In"
            android:textSize="25dp" />

    </RelativeLayout>
</ScrollView>
    </FrameLayout>



