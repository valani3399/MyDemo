<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_main" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dp">

            <TextView
                android:id="@+id/tv_signinname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="SIGN IN"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="40dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_im"
                android:layout_below="@+id/tv_signinname"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_account_circle_black_24dp"/>


            <EditText
                android:id="@+id/tex_emil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_im"
                android:hint="gmail"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tex_emil"
                android:hint="password"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_password"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="Sign In"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_forgotpassward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_signin"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="forgot passward?"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_notragister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_forgotpassward"
                android:layout_centerHorizontal="true"
                android:text="not ragister?SignUp"
                android:textSize="25dp" />
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>